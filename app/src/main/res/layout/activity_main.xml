<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <TableLayout
        android:id="@+id/tableLayout1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="124dp"
        tools:layout_editor_absoluteY="16dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/tableTop"
            android:layout_width="80pt"
            android:layout_height="90pt"
            android:background="#808080"
            android:textAlignment="textEnd">
            <TextView
                android:id="@+id/viewResult"
                android:layout_width="match_parent"
                android:layout_height="90pt"
                android:text=" "
                android:textSize="55dp"
                android:textColor="@color/black"
                android:textAlignment="textEnd"
                tools:ignore="HardcodedText,SpUsage">
            </TextView>

        </androidx.constraintlayout.widget.ConstraintLayout>


        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            tools:ignore="UselessParent">
            <Button
                android:id="@+id/btnCancel"
                android:layout_width="40pt"
                android:layout_height="40pt"
                app:cornerRadius="50dp"
                android:layout_marginLeft="10dp"
                android:text="C"
                android:textSize="25dp"
                android:textColor="@color/black"
                android:backgroundTint="#ffb7c5"
                tools:ignore="ButtonStyle,HardcodedText,RtlHardcoded,SpUsage" />
            <Button
                android:id="@+id/btnPi"
                android:layout_width="40pt"
                android:layout_height="40pt"
                android:layout_marginLeft="10dp"
                app:cornerRadius="50dp"
                android:text="Pi"
                android:textSize="25dp"
                android:textColor="@color/black"
                android:backgroundTint="#ffb7c5"
                tools:ignore="ButtonStyle,HardcodedText,RtlHardcoded,SpUsage" />
            <Button
                android:id="@+id/btnPercent"
                android:layout_width="40pt"
                android:layout_height="40pt"
                android:layout_marginLeft="10dp"
                app:cornerRadius="50dp"
                android:text="%"
                android:textSize="25dp"
                android:textColor="@color/black"
                android:backgroundTint="#ffb7c5"
                tools:ignore="ButtonStyle,HardcodedText,RtlHardcoded,SpUsage" />
            <Button
                android:id="@+id/btnDvision"
                android:layout_width="40pt"
                android:layout_height="40pt"
                android:layout_marginLeft="10dp"
                app:cornerRadius="50dp"
                android:text="/"
                android:textSize="25dp"
                android:textColor="@color/white"
                android:backgroundTint="#3d3d3d"
                tools:ignore="ButtonStyle,HardcodedText,RtlHardcoded,SpUsage" />
        </TableRow>
        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            tools:ignore="MissingConstraints,UselessParent">
            <Button
                android:id="@+id/btnSeven"
                android:layout_width="40pt"
                android:layout_height="40pt"
                app:cornerRadius="50dp"
                android:layout_marginLeft="10dp"
                android:text="7"
                android:textSize="25dp"
                android:textColor="@color/black"
                android:backgroundTint="#e3dac9"

                tools:ignore="ButtonStyle,HardcodedText,RtlHardcoded,SpUsage" />
            <Button
                android:id="@+id/btnEight"
                android:layout_width="40pt"
                android:layout_height="40pt"
                app:cornerRadius="50dp"
                android:layout_marginLeft="10dp"
                android:text="8"
                android:textSize="25dp"
                android:textColor="@color/black"
                android:backgroundTint="#e3dac9"
                tools:ignore="ButtonStyle,HardcodedText,RtlHardcoded,SpUsage" />
            <Button
                android:id="@+id/btnNine"
                android:layout_width="40pt"
                android:layout_height="40pt"
                app:cornerRadius="50dp"
                android:layout_marginLeft="10dp"
                android:text="9"
                android:textSize="25dp"
                android:textColor="@color/black"
                android:backgroundTint="#e3dac9"
                tools:ignore="ButtonStyle,HardcodedText,RtlHardcoded,SpUsage" />
            <Button
                android:id="@+id/btnMult"
                android:layout_width="40pt"
                android:layout_height="40pt"
                app:cornerRadius="50dp"
                android:layout_marginLeft="10dp"
                android:text="*"
                android:textSize="25dp"
                android:textColor="@color/white"
                android:backgroundTint="#3d3d3d"
                tools:ignore="ButtonStyle,HardcodedText,RtlHardcoded,SpUsage" />
        </TableRow>
        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            tools:ignore="MissingConstraints,UselessParent">
            <Button
                android:id="@+id/btnFour"
                android:layout_width="40pt"
                android:layout_height="40pt"
                app:cornerRadius="50dp"
                android:layout_marginLeft="10dp"
                android:text="4"
                android:textSize="25dp"
                android:textColor="@color/black"
                android:backgroundTint="#e3dac9"
                tools:ignore="ButtonStyle,HardcodedText,RtlHardcoded,SpUsage" />
            <Button
                android:id="@+id/btnFifth"
                android:layout_width="40pt"
                android:layout_height="40pt"
                app:cornerRadius="50dp"
                android:layout_marginLeft="10dp"
                android:text="5"
                android:textSize="25dp"
                android:textColor="@color/black"
                android:backgroundTint="#e3dac9"
                tools:ignore="ButtonStyle,HardcodedText,RtlHardcoded,SpUsage" />
            <Button
                android:id="@+id/btnSix"
                android:layout_width="40pt"
                android:layout_height="40pt"
                app:cornerRadius="50dp"
                android:layout_marginLeft="10dp"
                android:text="6"
                android:textSize="25dp"
                android:textColor="@color/black"
                android:backgroundTint="#e3dac9"
                tools:ignore="ButtonStyle,HardcodedText,RtlHardcoded,SpUsage" />
            <Button
                android:id="@+id/btnSubtract"
                android:layout_width="40pt"
                android:layout_height="40pt"
                app:cornerRadius="50dp"
                android:layout_marginLeft="10dp"
                android:text="-"
                android:textSize="25dp"
                android:textColor="@color/white"
                android:backgroundTint="#3d3d3d"
                tools:ignore="ButtonStyle,HardcodedText,RtlHardcoded,SpUsage" />
        </TableRow>
        <TableRow
            android:id="@+id/tableRow4"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            tools:ignore="MissingConstraints,UselessParent">
            <Button
                android:id="@+id/btnOne"
                android:layout_width="40pt"
                android:layout_height="40pt"
                app:cornerRadius="50dp"
                android:layout_marginLeft="10dp"
                android:text="1"
                android:textSize="25dp"
                android:textColor="@color/black"
                android:backgroundTint="#e3dac9"
                tools:ignore="ButtonStyle,HardcodedText,RtlHardcoded,SpUsage" />
            <Button
                android:id="@+id/btnTwo"
                android:layout_width="40pt"
                android:layout_height="40pt"
                app:cornerRadius="50dp"
                android:layout_marginLeft="10dp"
                android:text="2"
                android:textSize="25dp"
                android:textColor="@color/black"
                android:backgroundTint="#e3dac9"
                tools:ignore="ButtonStyle,HardcodedText,RtlHardcoded,SpUsage" />
            <Button
                android:id="@+id/btnThree"
                android:layout_width="40pt"
                android:layout_height="40pt"
                app:cornerRadius="50dp"
                android:layout_marginLeft="10dp"
                android:text="3"
                android:textSize="25dp"
                android:textColor="@color/black"
                android:backgroundTint="#e3dac9"
                tools:ignore="ButtonStyle,HardcodedText,RtlHardcoded,SpUsage" />
            <Button
                android:id="@+id/btnPlus"
                android:layout_width="40pt"
                android:layout_height="40pt"
                app:cornerRadius="50dp"
                android:layout_marginLeft="10dp"
                android:text="+"
                android:textSize="25dp"
                android:textColor="@color/white"
                android:backgroundTint="#3d3d3d"
                tools:ignore="ButtonStyle,HardcodedText,RtlHardcoded,SpUsage" />
        </TableRow>
        <TableRow
            android:id="@+id/tableRow5"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            tools:ignore="MissingConstraints,UselessParent">
            <Button
                android:id="@+id/btnPlusMinus"
                android:layout_width="40pt"
                android:layout_height="40pt"
                app:cornerRadius="50dp"
                android:layout_marginLeft="10dp"
                android:text="+/-"
                android:textSize="25dp"
                android:textColor="@color/black"
                android:backgroundTint="#ffb7c5"
                tools:ignore="ButtonStyle,HardcodedText,RtlHardcoded,SpUsage" />
            <Button
                android:id="@+id/btnZero"
                android:layout_width="40pt"
                android:layout_height="40pt"
                app:cornerRadius="50dp"
                android:layout_marginLeft="10dp"
                android:text="0"
                android:textSize="25dp"
                android:textColor="@color/black"
                android:backgroundTint="#e3dac9"
                tools:ignore="ButtonStyle,HardcodedText,RtlHardcoded,SpUsage" />
            <Button
                android:id="@+id/btnPoint"
                android:layout_width="40pt"
                android:layout_height="40pt"
                app:cornerRadius="50dp"
                android:layout_marginLeft="10dp"
                android:text="."
                android:textSize="25dp"
                android:textColor="@color/black"
                android:backgroundTint="#ffb7c5"
                tools:ignore="ButtonStyle,HardcodedText,RtlHardcoded,SpUsage" />
            <Button
                android:id="@+id/btnResult"
                android:layout_width="40pt"
                android:layout_height="40pt"
                app:cornerRadius="50dp"
                android:layout_marginLeft="10dp"
                android:text="="
                android:textSize="25dp"
                android:textColor="@color/white"
                android:backgroundTint="#3d3d3d"
                tools:ignore="ButtonStyle,HardcodedText,RtlHardcoded,SpUsage" />
        </TableRow>


    </TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>